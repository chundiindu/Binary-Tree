*/
class Tree
{
    //Function to check whether all nodes of a tree have the value 
    //equal to the sum of their child nodes.
    public static int isSumProperty(Node root)
    {
       if(root == null || (root.left == null && root.right == null))
            return 1;
            if(root.left  != null && root.right != null && (root.left.data + root.right.data == root.data))  
            {
           int x =isSumProperty(root.left) & isSumProperty(root.right);
           return x;
            }
             else if(root.left == null && root.data == root.right.data)
             {
                int y= isSumProperty(root.right);
                return y;
             }
             else if(root.right == null && root.data == root.left.data)
             {
             int z = isSumProperty(root.left);
             return z;
             }
        return 0;
    }
}
